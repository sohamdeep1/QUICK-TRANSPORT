generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(RIDER)
  createdAt DateTime @default(now())
  rides     Ride[]

  captain Captain?
}

model Captain {
  id        String    @id @default(uuid())
  userId    String    @unique
  vehicleNo String
  kycStatus KycStatus @default(PENDING)
  isOnline  Boolean   @default(false)
  wallet    Float     @default(0)
  rides     Ride[]

  user User @relation(fields: [userId], references: [id])
}

model Ride {
  id        String  @id @default(uuid())
  riderId   String
  captainId String?

  pickupLat Float
  pickupLng Float
  dropLat   Float
  dropLng   Float

  status     RideStatus @default(REQUESTED)
  fare       Float?
  distanceKm Float?

  createdAt DateTime @default(now())

  rider   User     @relation(fields: [riderId], references: [id])
  captain Captain? @relation(fields: [captainId], references: [id])
}

enum Role {
  RIDER
  CAPTAIN
  ADMIN
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RideStatus {
  REQUESTED
  ACCEPTED
  ARRIVED
  STARTED
  COMPLETED
  CANCELLED
}
